<h1><em><%= "#{@parent.first_name} #{@parent.last_name}"%></em></h1>

<p>
First Name: <%= @parent.first_name %>
</p>

<p>
Last Name: <%= @parent.last_name %>
</p>

<p>
User Name: <%= @parent.username %>
</p>

<p>
Email: <%= @parent.email %>
</p>

<p>
Phone Number: <%= @parent.phone_number %>
</p>

<% if children_not_entered(@parent) %>
    <h2> <%= link_to "Add Child", new_parent_child_path(@parent)%> </h2>
<% else %>
    <hr>
    <h2> Children</h2>
    <div>
        <table>
        <thead>
        <tr>
            <th colspan="4"></th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>
                <strong>Name</strong>
            </td>
            <td>
                <strong>Age</strong>
            </td>
            <td>
                <strong>View History</strong>
            </td>
        </tr>
        <tbody>
        <% @parent.children.each do |child| %>
        <tr>
            <td>
                <%= link_to "#{child.first_name} #{child.last_name}", parent_child_path(@parent, child) %>
            </td>
            <td>
                <%= child.age%>
            </td>
            <td>
                Appointments
            </td>
        </tr>

        <% end %>
        </tbody>
        </table>
        <br>
        <h2><%= link_to "Add Child", new_parent_child_path(@parent) %> </h2>
    </div>
<% end %>
    
<div>
    <br>
    <%= link_to "Edit", edit_parent_path(@parent) %> | <%= link_to "View Appointments", parent_appointments_path(@parent) %><br>
    <%= link_to "Log Out", signout_path, method: :post %><br>
</div>


