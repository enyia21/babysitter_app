<%= form_with model: @appointment, url: edit_route do |f| %>

<%= f.label :start_time %><br>
<%= f.datetime_field :start_time %><br><br>

<%= f.label :end_time %><br>
<%= f.datetime_field :end_time %><br><br>

<%= f.label :completed %>
<%= f.check_box :completed %><br><br>

<br>
<div>
<h3>Choose a Babysitter: </h3>
<%= f.collection_select :babysitter_id, Babysitter.all, :id, :full_name, prompt: true %>
<br><br>
</div>

<div>
<h3>Children to Watch: </h3>
<%= f.collection_check_boxes :child_ids, @parent.children, :id, :full_name do |b| %>
<%= b.label(class: "checkbox") %>
<%= b.check_box(class: "checkbox") %><br>
<% end %>
</div>
<br>
<%= f.submit %>
<% end %>