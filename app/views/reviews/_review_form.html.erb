<%= form_with model: @review, url: review_route do |f| %>

<%= f.hidden_field :parent_id %>
<%= f.hidden_field :appointment_id %>

<%= f.label :rating %><br>
<%= f.number_field :rating, min: 1, max: 5 %><br><br>

<%= f.label :comment %><br>
<%= f.text_area :comment %><br><br>

<%= f.submit %>
<% end %>
<br>
<%= link_to "Return to Appointment", parent_appointment_path(@parent, @appointment) %> |
<%= link_to "Return Home", parent_path(@parent) %>